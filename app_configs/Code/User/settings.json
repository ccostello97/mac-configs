{
  // Theme
  "workbench.colorTheme": "Tokyo Night Storm",
  "workbench.iconTheme": "vscode-icons",
  "workbench.tree.indent": 24,
  // Editor font
  "editor.fontFamily": "'JetBrains Mono'",
  "editor.fontLigatures": true,
  // Terminal font
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font'",
  // Terminal scrollback
  "terminal.integrated.scrollback": 15000,
  "notebook.output.textLineLimit": 1000,
  // Auto-save after short delay
  "files.autoSave": "afterDelay",
  // Remember unsaved files between sessions
  "files.hotExit": "onExitAndWindowClose",
  "window.restoreWindows": "all",
  // Lint and organize imports on save by default
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "notebook.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  // Auto-format on paste, save, and type
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "notebook.formatOnSave.enabled": true,
  // Do not ask for confirmation
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // Do not send reports to Microsoft
  "telemetry.telemetryLevel": "off",
  // Hide files
  "files.exclude": {
    "**/*.egg-info": true,
    "**/.pdm-python": true,
    "**/.venv": true,
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/.pytest_cache": true
  },
  "[html][django-html][handlebars][hbs][mustache][jinja][jinja-html][nj][njk][nunjucks][twig]": {
    // Use djLint formatter for HTML
    "editor.defaultFormatter": "monosans.djlint"
  },
  "[python]": {
    // Use Ruff formatter for Python
    "editor.defaultFormatter": "charliermarsh.ruff",
    // Enforce max line length of 79 (PEP-8)
    "editor.rulers": [79],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 79,
  },
  // Ruff configuration
  "ruff.lint.args": ["--config=pyproject.toml", "--ignore=D,S101,SLF001,T201"],
  // MyPy configuration
  "mypy-type-checker.importStrategy": "fromEnvironment",
  "mypy-type-checker.args": ["--config-file=pyproject.toml"],
  // Have autodocstring plugin use PEP-257
  "autoDocstring.docstringFormat": "pep257",
  // In Python, automatically trim trailing whitespace
  "pythonIndent.trimLinesWithOnlyWhitespace": true,
  // Have djLint plugin use pipx-installed djLint
  "djlint.useVenv": false,
  "djlint.pythonPath": "/Users/christophercostello/.local/pipx/venvs/djlint/bin/python",
  "workbench.colorCustomizations": {}
}
